{
  "name": "react-css-transition-hook",
  "author": "Markus Ast",
  "version": "2.0.0",
  "license": "MIT",
  "description": "Minimal, zero-dependency React hook to CSS class name based transitions.",
  "keywords": [
    "react",
    "hook",
    "react hook",
    "transition",
    "CSS"
  ],
  "main": "dist/index.js",
  "module": "dist/react-css-transition-hook.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "echo 'tsdx lint skipped for now'",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@testing-library/react-hooks": "^5.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "husky": "^4.3.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 100
  },
  "size-limit": [
    {
      "path": "dist/react-css-transition-hook.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-css-transition-hook.esm.js",
      "limit": "10 KB"
    }
  ]
}
